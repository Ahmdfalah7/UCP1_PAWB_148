<!-- views/pupuk.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Halaman Pupuk</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Data Pupuk</h1>
    </header>

    <div class="container">
        <h2>Daftar Pupuk</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nama Pupuk</th>
                    <th>Jenis Pupuk</th>
                    <th>Kandungan NPK</th>
                    <th>Stok</th>
                    <th>Harga per KG</th>
                </tr>
            </thead>
            <tbody>
                <% pupukList.forEach(pupuk => { %>
                    <tr>
                        <td><%= pupuk.id %></td>
                        <td><%= pupuk.nama_pupuk %></td>
                        <td><%= pupuk.jenis_pupuk %></td>
                        <td><%= pupuk.kandungan_npk %></td>
                        <td><%= pupuk.stok %></td>
                        <td><%= pupuk.harga_per_kg %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <div class="form-container">
            <h3>Tambah Pupuk Baru</h3>
            <form action="/pupuk" method="POST">
                <input type="text" name="nama_pupuk" placeholder="Nama Pupuk" required>
                <input type="text" name="jenis_pupuk" placeholder="Jenis Pupuk" required>
                <input type="text" name="kandungan_npk" placeholder="Kandungan NPK" required>
                <input type="number" name="stok" placeholder="Stok" required>
                <input type="number" name="harga_per_kg" placeholder="Harga per KG" required>
                <button type="submit">Tambah Pupuk</button>
            </form>
        </div>
    </div>
</body>
</html>
