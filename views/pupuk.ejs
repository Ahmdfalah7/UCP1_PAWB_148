<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Halaman Pupuk</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>

<body class="bg-light">
    <header class="bg-success text-white text-center py-4 shadow">
        <h1><i class="bi bi-box-seam"></i> Data Pupuk</h1>
    </header>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-md-12">
                <a href="/" class="btn btn-primary shadow-sm">
                    <i class="bi bi-arrow-left"></i> Kembali ke Dashboard
                </a>
            </div>
        </div>

        <h2 class="text-success mb-4"><i class="bi bi-list-ul"></i> Daftar Pupuk</h2>

       
        <div class="card shadow-sm mb-4">
            <div class="card-body table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-success">
                        <tr>
                            <th>ID</th>
                            <th>Nama Pupuk</th>
                            <th>Jenis Pupuk</th>
                            <th>Stok</th>
                            <th>Harga per KG</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% pupukList.forEach(pupuk => { %>
                            <tr>
                                <td><%= pupuk.id %></td>
                                <td><%= pupuk.nama_pupuk %></td>
                                <td><%= pupuk.jenis_pupuk %></td>
                                <td><%= pupuk.stok %></td>
                                <td>Rp <%= pupuk.harga_per_kg.toLocaleString('id-ID') %></td>
                                <td>
                                    <a href="/pupuk/edit/<%= pupuk.id %>" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a href="/pupuk/delete/<%= pupuk.id %>" 
                                       class="btn btn-danger btn-sm"
                                       onclick="return confirm('Apakah Anda yakin ingin menghapus pupuk ini?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

       
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Tambah Pupuk Baru</h3>
            </div>
            <div class="card-body">
                <form action="/pupuk" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="nama_pupuk" class="form-label">
                            <i class="bi bi-tag"></i> Nama Pupuk
                        </label>
                        <input type="text" class="form-control" id="nama_pupuk" name="nama_pupuk" placeholder="Masukkan nama pupuk" required>
                        <div class="invalid-feedback">
                            Nama pupuk harus diisi
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="jenis_pupuk" class="form-label">
                            <i class="bi bi-box-seam"></i> Jenis Pupuk
                        </label>
                        <input type="text" class="form-control" id="jenis_pupuk" name="jenis_pupuk" placeholder="Masukkan jenis pupuk" required>
                        <div class="invalid-feedback">
                            Jenis pupuk harus diisi
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="stok" class="form-label">
                            <i class="bi bi-box"></i> Stok
                        </label>
                        <input type="number" class="form-control" id="stok" name="stok" placeholder="Masukkan stok" required min="0">
                        <div class="invalid-feedback">
                            Stok harus diisi dengan angka valid
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="harga_per_kg" class="form-label">
                            <i class="bi bi-currency-dollar"></i> Harga per KG
                        </label>
                        <input type="number" class="form-control" id="harga_per_kg" name="harga_per_kg" placeholder="Masukkan harga per KG" required min="0">
                        <div class="invalid-feedback">
                            Harga harus diisi dengan angka valid
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Tambah Pupuk
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="bi bi-arrow-counterclockwise"></i> Reset
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script>
        
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
</body>
</html>
